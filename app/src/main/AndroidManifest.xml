<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.domingoscarreiradepaola.crossover.conference" >

    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.WRITE_CALENDAR" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".UserInterface.LoginActivity_"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".UserInterface.ConferenceActivity_"
            android:label="@string/title_activity_conference" >
        </activity>
        <activity
            android:name=".UserInterface.ListConferenceActivity_"
            android:label="@string/title_activity_list_confere" >
        </activity>
        <activity
            android:name=".UserInterface.InviteActivity_"
            android:label="@string/title_activity_invite" >
        </activity>
        <activity
            android:name=".UserInterface.SuggestionsActivity_"
            android:label="@string/title_activity_suggestions" >
        </activity>
    </application>

</manifest>
